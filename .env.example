# Environment
ENV=development
DEBUG=true

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Pure Financial Funding

# CORS (comma-separated list)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Supabase (Required)
SUPABASE_URL=your-project-url
SUPABASE_SERVICE_KEY=your-service-key

# Google Sheets (Optional)
SHEET_ID=your-sheet-id
GOOGLE_SHEETS_CREDENTIALS_JSON={"type": "service_account", ...}
LEADS_SHEET_NAME=Leads
TONE_SETTINGS_SHEET_NAME=BrokerTones
GOOGLE_SHEETS_LEADS_RANGE=A1:Z1000
GOOGLE_SHEETS_TONE_RANGE=A1:Z100

# Email Configuration (Optional)
EMAIL_SENDER=your-email@domain.com
EMAIL_START_HOUR=9
EMAIL_END_HOUR=17
EMAIL_BATCH_SIZE=50
EMAIL_BATCH_DELAY=1
EMAIL_QUEUE_ALERT_THRESHOLD=1000

# Kixie SMS Configuration (Optional)
KIXIE_BASE_URL=https://api.kixie.com/v1
KIXIE_API_KEY=your-api-key
KIXIE_SECRET=your-secret
KIXIE_BUSINESS_ID=your-business-id

# JWT Settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Feature Flags
ENABLE_GOOGLE_SHEETS_SYNC=true
ENABLE_EMAIL_FALLBACK=true
ENABLE_DAILY_REPORTS=true

# Business Hours
BUSINESS_HOURS_START=9
BUSINESS_HOURS_END=17
FOLLOWUP_START_HOUR=9
FOLLOWUP_END_HOUR=17

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Batch Processing
BATCH_SIZE=100
BATCH_DELAY=1

# Priority Scoring Settings
PRIORITY_RECENCY_WEIGHT=0.5
PRIORITY_ENGAGEMENT_WEIGHT=0.3
PRIORITY_CLASS_WEIGHT=0.2
PRIORITY_RECENCY_HALF_LIFE_DAYS=7
PRIORITY_ENGAGEMENT_WINDOW_DAYS=14
# Priority class scores are configured in code
